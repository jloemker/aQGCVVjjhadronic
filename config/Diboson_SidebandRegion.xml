      <OutputTree Name="AnalysisTree"/>
    </InputData>
    <InputData Version="MC_WZ" Lumi="21005.792" Type="MC" NEventsMax="-1" Cacheable="False">
      &MC_WZ; <InputTree Name="AnalysisTree"/>
